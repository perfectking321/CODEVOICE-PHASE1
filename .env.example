# CodeVoice Environment Configuration

# ============================================
# AUDIO SETTINGS
# ============================================
MICROPHONE_DEVICE_ID=0
AUDIO_SAMPLE_RATE=16000
AUDIO_CHUNK_SIZE=512

# ============================================
# ASR (Speech Recognition) SETTINGS
# ============================================
ASR_MODEL_SIZE=base
ASR_LANGUAGE=en

# ============================================
# INTENT CLASSIFICATION SETTINGS
# ============================================
INTENT_MODEL_NAME=distilbert-base-uncased-finetuned-sst-2-english
INTENT_CONFIDENCE_THRESHOLD=0.85

# ============================================
# LOGGING SETTINGS
# ============================================
LOG_LEVEL=INFO
LOG_FILE=logs/codevoice.log
LOG_TO_CONSOLE=true
